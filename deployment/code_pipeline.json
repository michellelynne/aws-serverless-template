{
    "pipeline": {
        "roleArn": "$roleArn",
        "stages": [
            {
                "name": "Source", 
                "actions": [
                    {
                        "inputArtifacts": [], 
                        "name": "ApplicationSource", 
                        "actionTypeId": {
                            "category": "Source", 
                            "owner": "ThirdParty", 
                            "version": "1", 
                            "provider": "GitHub"
                        }, 
                        "outputArtifacts": [
                            {
                                "name": "$github-repo-source-artifact-$env"
                            }
                        ], 
                        "configuration": {
                            "Owner": "$github-name",
                            "Repo": "$github-repo", 
                            "PollForSourceChanges": "false", 
                            "Branch": "$env",
                            "OAuthToken": "$oauth_token"
                        }, 
                        "runOrder": 1
                    }
                ]
            }, 
            {
                "name": "Build", 
                "actions": [
                    {
                        "inputArtifacts": [
                            {
                                "name": "$github-repo-source-artifact-$env"
                            }
                        ], 
                        "name": "PackageExport", 
                        "actionTypeId": {
                            "category": "Build", 
                            "owner": "AWS", 
                            "version": "1", 
                            "provider": "CodeBuild"
                        }, 
                        "outputArtifacts": [
                            {
                                "name": "$github-repo-build-artifact-$env"
                            }
                        ], 
                        "configuration": {
                            "ProjectName": "$github-repo-$env"
                        }, 
                        "runOrder": 1
                    }
                ]
            }, 
            {
                "name": "Deploy", 
                "actions": [
                    {
                        "inputArtifacts": [
                            {
                                "name": "$github-repo-build-artifact-$env"
                            }
                        ], 
                        "name": "GenerateChangeSet", 
                        "actionTypeId": {
                            "category": "Deploy", 
                            "owner": "AWS", 
                            "version": "1", 
                            "provider": "CloudFormation"
                        }, 
                        "outputArtifacts": [], 
                        "configuration": {
                            "ActionMode": "CHANGE_SET_REPLACE", 
                            "ChangeSetName": "pipeline-changeset", 
                            "RoleArn": "$RoleArn",
                            "Capabilities": "CAPABILITY_NAMED_IAM", 
                            "StackName": "$github-repo-$env",
                            "ParameterOverrides": "{\"ProjectId\":\"$github-repo\"}",
                            "TemplateConfiguration": "$github-repo-build-artifact::template-configuration.json", 
                            "TemplatePath": "$github-repo-build-artifact::template-export.yml"
                        }, 
                        "runOrder": 1
                    }, 
                    {
                        "inputArtifacts": [], 
                        "name": "ExecuteChangeSet", 
                        "actionTypeId": {
                            "category": "Deploy", 
                            "owner": "AWS", 
                            "version": "1", 
                            "provider": "CloudFormation"
                        }, 
                        "outputArtifacts": [], 
                        "configuration": {
                            "StackName": "$github-repo-$env",
                            "ActionMode": "CHANGE_SET_EXECUTE", 
                            "ChangeSetName": "pipeline-changeset"
                        }, 
                        "runOrder": 2
                    }
                ]
            }
        ], 
        "artifactStore": {
            "type": "S3", 
            "location": "$github-repo-pipeline-$env"
        }, 
        "name": "$github-repo-pipeline-$env",
        "version": 1
    }
}
